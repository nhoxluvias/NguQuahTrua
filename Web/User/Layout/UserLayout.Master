                            <li class="hidden">
                                <a href="#page-top"></a>
                            </li>
                            <li class="dropdown first">
                                <a class="btn btn-default">Trang chủ
                                </a>
                            </li>
                            <li class="dropdown first">
                                <a class="btn btn-default dropdown-toggle lv1" data-toggle="dropdown" data-hover="dropdown">Thể loại<i class="fa fa-angle-down" aria-hidden="true"></i>
                                </a>
                                <ul class="dropdown-menu level1">
                                    <% foreach(CategoryInfo category in categories){ %>
                                        <li>
                                            <a href="<%= category.url %>"><% = category.name %></a>
                                        </li>
                                    <% } %>
                                </ul>
                            </li>
                            <li class="dropdown first">
                                <a class="btn btn-default dropdown-toggle lv1" data-toggle="dropdown" data-hover="dropdown">Bài viết<i class="fa fa-angle-down" aria-hidden="true"></i>
                                </a>
                                <ul class="dropdown-menu level1">
                                    <li><a href="celebritygrid01.html">Hướng dẫn</a></li>
                                </ul>
                            </li>
                            <li class="dropdown first">
                                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Giới thiệu <i class="fa fa-angle-down" aria-hidden="true"></i>
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav flex-child-menu menu-right">
                            <li class="dropdown first">
                                <a class="btn btn-default dropdown-toggle lv1" data-toggle="dropdown" data-hover="dropdown">Công cụ <i class="fa fa-angle-down" aria-hidden="true"></i>
                                </a>
                                <ul class="dropdown-menu level1">
                                    <li><a href="landing.html">API</a></li>
                                </ul>
                            </li>
                            <li><a href="#">Hỗ trợ</a></li>
                            <li class="loginLink"><a href="#">Đăng nhập</a></li>
                            <li class="btn signupLink"><a href="#">Đăng ký</a></li>
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </nav>

                <!-- top search form -->
                <div class="top-search">
                    <select>
                        <option value="united">Phim chiếu rạp</option>
                        <option value="saab">Phim bộ</option>
                    </select>
                    <input type="text" placeholder="Nhập tên phim mà bạn muốn tìm....">
                </div>
            </div>
        </header>
        <!-- END | Header -->

        <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
        </asp:ContentPlaceHolder>

